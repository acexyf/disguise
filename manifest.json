{
    "manifest_version": 2,
    "name": "disguiser",
    "version": "1.0.0",
    "description": "伪装者",
    "icons": {
        "16": "img/icon.png",
        "32": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/content-script.js"
            ],
            "css": [
                "css/custom.css"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "page": "background/background.html",
        "persistent": false
    },
    "web_accessible_resources": [
        "js/popup.js",
        "css/popup.css"
    ],
    "permissions": [
        "bookmarks",
        "tabs",
        "storage"
    ],
    "homepage_url": "https://acexyf.github.io",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "伪装者",
        "default_popup": "popup.html"
    }
}